<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
    version="2.1">

  <!-- Regras de navegação para a página de Ordem de Serviço -->
 <navigation-rule>
  <navigation-case>
   <from-outcome>sucesso</from-outcome>
   <to-view-id>/xhtml/sucesso.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>falha</from-outcome>
   <to-view-id>/xhtml/falha.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>listar</from-outcome>
   <to-view-id>/xhtml/vwListarOrdemServicos.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>editar</from-outcome>
   <to-view-id>/xhtml/vwEditarOrdemServicos.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>criar</from-outcome>
   <to-view-id>/xhtml/vwCriarOrdemServicos.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule> 

<!-- JSF and Spring are integrated -->
    <application>
        <el-resolver>
            org.springframework.web.jsf.el.SpringBeanFacesELResolver
        </el-resolver>
        
        <locale-config> 
		<default-locale>pt_BR</default-locale> 
		</locale-config>
    </application>
    
    <converter>
  	<converter-id>dateConverter</converter-id>
  	<converter-class>br.pucgoias.util.DateConverter</converter-class>
 	</converter>


</faces-config>
